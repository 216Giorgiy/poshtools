<shell:VsShellDialogWindow x:Class="Microsoft.VisualStudio.Repl.DialogWindows.RemoteSessionEnterWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:shell="clr-namespace:PowerShellTools.Common;assembly=PowerShellTools.Common">
<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
           <Label Content="ComputerName:"/>
           <TextBox /> 
        </Grid>
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="0,10,10,10"
                    Orientation="Horizontal">
            <Button Click="OnOkButtonClick"
                    Content="OK"
                    IsDefault="True" 
                    IsEnabled="{Binding IsLoaded}"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    Margin="5,0,0,0" />
        </StackPanel>
    </Grid>
</shell:VsShellDialogWindow>
